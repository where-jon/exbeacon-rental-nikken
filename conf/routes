# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                                controllers.Application.index


###  業務ページ ############################
# 作業車利用状況
GET     /carSummery                     controllers.CarSummery.index
GET     /carSummery/getPlotInfo         controllers.CarSummery.getPlotInfo
# 作業車予約
GET     /carReserve                     controllers.CarReserve.index
POST    /carReserve/register            controllers.CarReserve.register
POST    /carReserve/registerModal       controllers.CarReserve.registerModal
POST    /carReserve/update              controllers.CarReserve.update
POST    /carReserve/delete              controllers.CarReserve.delete
# その他仮設材利用状況
GET     /otherItem                      controllers.OtherItem.index
GET     /otherItem/getPlotInfo          controllers.OtherItem.getPlotInfo

###  CMS　#################################
# 現場管理
GET     /cms/placeManage                controllers.cms.PlaceManage.index
GET     /cms/placeManage/detail         controllers.cms.PlaceManage.detail
POST    /cms/placeManage/register       controllers.cms.PlaceManage.register
POST    /cms/placeManage/change         controllers.cms.PlaceManage.change
POST    /cms/placeManage/update         controllers.cms.PlaceManage.update
POST    /cms/placeManage/delete         controllers.cms.PlaceManage.delete
POST    /cms/placeManage/floorUpdate    controllers.cms.PlaceManage.floorUpdate
POST    /cms/placeManage/floorDelete    controllers.cms.PlaceManage.floorDelete
POST    /cms/placeManage/passwordUpdate controllers.cms.PlaceManage.passwordUpdate

# 作業車管理
GET     /cms/carManage                  controllers.cms.CarManage.index
POST    /cms/carManage/update           controllers.cms.CarManage.update
POST    /cms/carManage/delete           controllers.cms.CarManage.delete
# 仮設材管理
GET     /cms/itemManage                 controllers.cms.ItemManage.index
POST    /cms/itemManage/update          controllers.cms.ItemManage.update
POST    /cms/itemManage/delete          controllers.cms.ItemManage.delete
# 業者管理
GET     /cms/companyManage              controllers.cms.CompanyManage.index
POST    /cms/companyManage/update       controllers.cms.CompanyManage.update
POST    /cms/companyManage/delete       controllers.cms.CompanyManage.delete

# Beaconタグ管理
GET     /cms/txTagManage                controllers.cms.TxTagManage.index




## 認証周り（日立APから移植）
GET     /signin                         controllers.Auth.signIn
POST    /authenticate                   controllers.Auth.authenticate
GET     /signout                        controllers.Auth.signOut
GET     /reset-password                 controllers.Auth.forgotPassword
POST    /reset-password                 controllers.Auth.handleForgotPassword
GET     /reset-password/:token          controllers.Auth.resetPassword(token: String)
POST    /reset-password/:token          controllers.Auth.handleResetPassword(token: String)
GET     /change-password                controllers.Auth.changePassword
POST    /change-password                controllers.Auth.handleChangePassword
GET     /myaccount                      controllers.Application.myAccount

# Map static resources from the /public folder to the /assets URL path
GET     /public/*file                   controllers.MyAssets.public(path="/public", file: Asset)
GET     /lib/*file                      controllers.MyAssets.lib(path="/public/lib", file: Asset)
GET     /css/*file                      controllers.MyAssets.css(path="/public/stylesheets", file: Asset)
GET     /js/*file                       controllers.MyAssets.js(path="/public/javascripts", file: Asset)
GET     /img/*file                      controllers.MyAssets.img(path="/public/images", file: Asset)
GET     /common/css/*file               controllers.MyAssets.commonCss(path="/public/lib/common/stylesheets", file: Asset)
GET     /common/js/*file                controllers.MyAssets.commonJs(path="/public/lib/common/javascripts", file: Asset)
GET     /common/img/*file               controllers.MyAssets.commonImg(path="/public/lib/common/images", file: Asset)
